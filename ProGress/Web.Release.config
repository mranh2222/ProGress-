<?xml version="1.0"?>

<!-- For more information on using Web.config transformation visit https://go.microsoft.com/fwlink/?LinkId=301874 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.web>
    <!-- Tắt debug mode cho production -->
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    
    <!-- Cấu hình custom errors cho production - để Off để debug -->
    <customErrors mode="Off" xdt:Transform="SetAttributes(mode)" />
    
    <!-- Tối ưu httpRuntime cho production -->
    <httpRuntime targetFramework="4.8" 
                 maxRequestLength="51200" 
                 executionTimeout="300" 
                 xdt:Transform="SetAttributes(maxRequestLength,executionTimeout)" />
  </system.web>
  
  <!-- Cập nhật connection string cho server khi publish Release -->
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Data Source=localhost;Initial Catalog=testwefl_ProGress;User ID=testwefl_ProGress;Password=Po27$mQnpOegvu1%;TrustServerCertificate=True;MultipleActiveResultSets=True;Connection Timeout=30" 
         providerName="System.Data.SqlClient"
         xdt:Transform="SetAttributes(connectionString)" 
         xdt:Locator="Match(name)" />
  </connectionStrings>
  
  <system.webServer>
    <!-- Bật compression để tối ưu performance -->
    <urlCompression doStaticCompression="true" 
                    doDynamicCompression="true" 
                    xdt:Transform="SetAttributes(doStaticCompression,doDynamicCompression)" />
  </system.webServer>
</configuration>
